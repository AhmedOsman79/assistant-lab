{
  "name": "@tabibi/server",
  "version": "1.0.0",
  "description": "Tabibi server",
  "author": "mohammed ahmed <mohammed182001180@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": "16.20.2"
  },
  "packageManager": "yarn@3.4.1",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:pm2": "pm2 start \"nest start\" --env production",
    "start": "nest start",
    "studio": "prisma studio",
    "start:watch": "nest start --watch",
    "dev": "node ./scripts/dev.js",
    "prisma-studio": "npx prisma studio",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "pm2": "pm2",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --runInBand --config ./test/jest-e2e.json --detectOpenHandles",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "type-check": "yarn  tsc --noEmit",
    "setup:db": "prisma generate && prisma db push",
    "types": "yarn build && ts-node scripts/types.ts"
  },
  "lint-staged": {
    "src/**/*.+(ts)": [
      "eslint --fix"
    ],
    "src/**/*.{ts,json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@joi/date": "^2.1.0",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/throttler": "^4.2.1",
    "@prisma/client": "^4.13.0",
    "@sentry/node": "^7.64.0",
    "argon2": "^0.31.0",
    "cloudinary": "^1.35.0",
    "compression": "^1.7.4",
    "handlebars": "^4.7.8",
    "helmet": "^6.2.0",
    "joi": "^17.7.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "nestjs-pino": "^1.4.0",
    "node-fetch": "2",
    "nodemailer": "^6.9.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pino-pretty": "^6.0.0",
    "pm2": "^5.2.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.2.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/lodash": "^4.14.195",
    "@types/multer": "^1.4.7",
    "@types/node": "18.11.18",
    "@types/node-fetch": "^2.6.11",
    "@types/nodemailer": "^6.4.8",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "jest": "29.3.1",
    "joi-to-typescript": "^4.6.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.3.2",
    "prisma": "^4.13.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleNameMapper": {
      "^src/(.*)": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
